@model ClidesCustoms.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" class="img-fluid rounded" alt="@Model.Name">
        }
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p class="lead">@Model.Description</p>
        
        <div class="mb-3">
            <strong>Category:</strong> @Model.Category
        </div>
        <div class="mb-3">
            <strong>Duration:</strong> @Model.DurationMinutes minutes
        </div>
        <div class="mb-3">
            <strong>Price:</strong> <span class="text-primary h4">R @Model.Price.ToString("F2")</span>
        </div>
        <div class="mb-3">
            <strong>Status:</strong> 
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </div>
        
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
