@model ClidesCustoms.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Customer Information</h5>
                    <p><strong>Name:</strong> @Model.Customer?.FirstName @Model.Customer?.LastName</p>
                    <p><strong>Email:</strong> @Model.Customer?.Email</p>
                </div>
                <div class="col-md-6">
                    <h5>Service Information</h5>
                    <p><strong>Service:</strong> @Model.Service?.Name</p>
                    <p><strong>Price:</strong> R @Model.Service?.Price.ToString("F2")</p>
                </div>
            </div>
            
            <hr />
            
            <div class="row">
                <div class="col-md-6">
                    <h5>Vehicle Information</h5>
                    <p><strong>Vehicle:</strong> @Model.VehicleYear @Model.VehicleMake @Model.VehicleModel</p>
                    <p><strong>License Plate:</strong> @Model.licensePlate</p>
                </div>
                <div class="col-md-6">
                    <h5>Booking Information</h5>
                    <p><strong>Booking Date:</strong> @Model.BookingDate</p>
                    <p><strong>Status:</strong> @Model.status</p>
                </div>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
