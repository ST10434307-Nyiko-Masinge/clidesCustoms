@model ClidesCustoms.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Customer Information</h5>
                    <p><strong>Name:</strong> @Model.Customer?.FirstName @Model.Customer?.LastName</p>
                    <p><strong>Email:</strong> @Model.Customer?.Email</p>
                </div>
                <div class="col-md-6">
                    <h5>Order Information</h5>
                    <p><strong>Order ID:</strong> #@Model.Id</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                    <p><strong>Total Amount:</strong> R @Model.TotalAmount.ToString("F2")</p>
                </div>
            </div>
            
            <hr />
            
            <div class="row">
                <div class="col-md-6">
                    <h5>Shipping Address</h5>
                    <p>@Model.ShippingAddress</p>
                </div>
                <div class="col-md-6">
                    <h5>Billing Address</h5>
                    <p>@Model.BillingAddress</p>
                </div>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
