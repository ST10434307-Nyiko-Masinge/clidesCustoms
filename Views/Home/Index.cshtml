@{
    ViewData["Title"] = "ClidesCustoms - Premium Car Services & Parts";
}

<!-- Hero Section with Futuristic Design -->
<section class="futuristic-hero">
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <div class="hero-text">
                        <h1 class="hero-title">
                            <span class="title-line">Welcome to</span>
                            <span class="title-line brand-highlight">ClidesCustoms</span>
                        </h1>
                        <p class="hero-subtitle">Premium automotive services, custom modifications, and high-quality parts for your vehicle</p>
                        <div class="hero-buttons">
                            <a asp-controller="Services" asp-action="Index" class="btn futuristic-btn-primary">
                                <i class="fas fa-tools me-2"></i>
                                <span>View Services</span>
                                <div class="btn-glow"></div>
                            </a>
                            <a asp-controller="Products" asp-action="Index" class="btn futuristic-btn-secondary">
                                <i class="fas fa-shopping-cart me-2"></i>
                                <span>Shop Products</span>
                                <div class="btn-glow"></div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-visual">
                        <div class="floating-card">
                            <div class="card-glow"></div>
                            <i class="fas fa-car-side"></i>
                        </div>
                        <div class="floating-elements">
                            <div class="element element-1"></div>
                            <div class="element element-2"></div>
                            <div class="element element-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
</section>

<!-- Featured Services Section -->
<section class="featured-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">
                <span class="title-icon"><i class="fas fa-tools"></i></span>
                Featured Services
            </h2>
            <p class="section-subtitle">Professional automotive services tailored to your needs</p>
        </div>
        
        <div class="row g-4">
            @if (ViewBag.FeaturedServices != null)
            {
                @foreach (var service in ViewBag.FeaturedServices)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="futuristic-card service-card">
                            <div class="card-header">
                                @if (!string.IsNullOrEmpty(service.ImageURL))
                                {
                                    <div class="card-image">
                                        <img src="@service.ImageURL" alt="@service.Name">
                                        <div class="image-overlay"></div>
                                    </div>
                                }
                                <div class="card-category">@service.Category</div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@service.Name</h5>
                                <p class="card-description">@service.Description</p>
                                <div class="card-meta">
                                    <div class="meta-item">
                                        <i class="fas fa-clock"></i>
                                        <span>@service.DurationMinutes min</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-tag"></i>
                                        <span>R @service.Price.ToString("F2")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="btn futuristic-btn-card">
                                    <span>View Details</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <div class="empty-state">
                        <i class="fas fa-tools"></i>
                        <h4>No services available</h4>
                        <p>Check back later for our latest services</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-section products-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">
                <span class="title-icon"><i class="fas fa-shopping-cart"></i></span>
                Featured Products
            </h2>
            <p class="section-subtitle">High-quality automotive parts and accessories</p>
        </div>
        
        <div class="row g-4">
            @if (ViewBag.FeaturedProducts != null)
            {
                @foreach (var product in ViewBag.FeaturedProducts)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="futuristic-card product-card">
                            <div class="card-header">
                                @if (!string.IsNullOrEmpty(product.ImageURL))
                                {
                                    <div class="card-image">
                                        <img src="@product.ImageURL" alt="@product.Name">
                                        <div class="image-overlay"></div>
                                    </div>
                                }
                                <div class="card-category">@product.Category</div>
                                <div class="stock-badge">@product.StockQuantity in stock</div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-description">@product.Description</p>
                                <div class="card-meta">
                                    <div class="meta-item">
                                        <i class="fas fa-tag"></i>
                                        <span>@product.Brand</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-dollar-sign"></i>
                                        <span>R @product.Price.ToString("F2")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn futuristic-btn-card">
                                    <span>View Details</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <div class="empty-state">
                        <i class="fas fa-shopping-cart"></i>
                        <h4>No products available</h4>
                        <p>Check back later for our latest products</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <div class="cta-text">
                <h3 class="cta-title">Ready to Get Started?</h3>
                <p class="cta-subtitle">Book a service or browse our products today</p>
            </div>
            <div class="cta-buttons">
                <a asp-controller="Bookings" asp-action="Create" class="btn futuristic-btn-cta">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span>Book Service</span>
                    <div class="btn-glow"></div>
                </a>
                <a asp-controller="Products" asp-action="Index" class="btn futuristic-btn-cta-outline">
                    <i class="fas fa-shopping-bag me-2"></i>
                    <span>Shop Now</span>
                    <div class="btn-glow"></div>
                </a>
            </div>
        </div>
    </div>
</section>
