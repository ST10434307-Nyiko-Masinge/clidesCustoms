@model ClidesCustoms.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="row">
    <div class="col-md-8">
        <h2>Booking Details</h2>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Customer Information</h5>
                        <p><strong>Name:</strong> @Model.Customer?.FirstName @Model.Customer?.LastName</p>
                        <p><strong>Email:</strong> @Model.Customer?.Email</p>
                        <p><strong>Phone:</strong> @Model.Customer?.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Service Information</h5>
                        <p><strong>Service:</strong> @Model.Service?.Name</p>
                        <p><strong>Description:</strong> @Model.Service?.Description</p>
                        <p><strong>Price:</strong> R @Model.Service?.Price.ToString("F2")</p>
                        <p><strong>Duration:</strong> @Model.Service?.DurationMinutes minutes</p>
                    </div>
                </div>
                
                <hr />
                
                <div class="row">
                    <div class="col-md-6">
                        <h5>Vehicle Information</h5>
                        <p><strong>Make:</strong> @Model.VehicleMake</p>
                        <p><strong>Model:</strong> @Model.VehicleModel</p>
                        <p><strong>Year:</strong> @Model.VehicleYear</p>
                        <p><strong>License Plate:</strong> @Model.licensePlate</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Booking Information</h5>
                        <p><strong>Booking Date:</strong> @Model.BookingDate</p>
                        <p><strong>Status:</strong> 
                            <span class="badge @(Model.status == "confirmed" ? "bg-success" : 
                                               Model.status == "pending" ? "bg-warning" : 
                                               Model.status == "completed" ? "bg-info" : "bg-danger")">
                                @Model.status
                            </span>
                        </p>
                        <p><strong>Created:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.notes))
                {
                    <hr />
                    <h5>Notes</h5>
                    <p>@Model.notes</p>
                }
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
