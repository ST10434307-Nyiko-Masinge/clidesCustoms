@model IEnumerable<ClidesCustoms.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="section-title">
        <span class="title-icon"><i class="fas fa-shopping-cart"></i></span>
        Our Products
    </h2>
    <a asp-action="Create" class="btn futuristic-btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>
        <span>Add New Product</span>
        <div class="btn-glow"></div>
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageURL))
                {
                    <img src="@product.ImageURL" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>
                    <div class="mt-auto">
                        <p class="text-muted">Brand: @product.Brand</p>
                        <p class="text-muted">Category: @product.Category</p>
                        <p class="text-muted">Stock: @product.StockQuantity units</p>
                        <h6 class="text-primary">R @product.Price.ToString("F2")</h6>
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4 class="text-muted">No products available</h4>
        <p class="text-muted">Add your first product to get started.</p>
        <a asp-action="Create" class="btn btn-primary">Add Product</a>
    </div>
}
