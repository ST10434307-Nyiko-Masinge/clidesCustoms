@model IEnumerable<ClidesCustoms.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="section-title">
        <span class="title-icon"><i class="fas fa-receipt"></i></span>
        Orders
    </h2>
    <a asp-action="Create" class="btn futuristic-btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>
        <span>New Order</span>
        <div class="btn-glow"></div>
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td>@order.Customer?.FirstName @order.Customer?.LastName</td>
                    <td>R @order.TotalAmount.ToString("F2")</td>
                    <td>
                        <span class="badge @(order.Status == "completed" ? "bg-success" : 
                                           order.Status == "processing" ? "bg-warning" : 
                                           order.Status == "pending" ? "bg-info" : "bg-danger")">
                            @order.Status
                        </span>
                    </td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4 class="text-muted">No orders found</h4>
        <p class="text-muted">Create your first order to get started.</p>
        <a asp-action="Create" class="btn btn-primary">New Order</a>
    </div>
}
