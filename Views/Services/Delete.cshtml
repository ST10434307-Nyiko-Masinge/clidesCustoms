@model ClidesCustoms.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h2>Delete Service</h2>

<h3>Are you sure you want to delete this service?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" class="img-fluid rounded" alt="@Model.Name">
            }
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                
                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Model.Description</dd>
                
                <dt class="col-sm-4">Category:</dt>
                <dd class="col-sm-8">@Model.Category</dd>
                
                <dt class="col-sm-4">Price:</dt>
                <dd class="col-sm-8">R @Model.Price.ToString("F2")</dd>
                
                <dt class="col-sm-4">Duration:</dt>
                <dd class="col-sm-8">@Model.DurationMinutes minutes</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
